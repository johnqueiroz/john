package cerveja;

import java.util.Scanner;

public class Principal {
	public static void main(String[] args) {
		
					int aceita,quantidade;
					int cerva=99;
					Scanner ler = new Scanner(System.in);				
					while(true) {
						while(cerva!=0){
						System.out.print(cerva);
						System.out.println(" cervejas na geladeira.");
						System.out.println("Pego uma garrafa, passo pra frente.");
						cerva= cerva -1;
						System.out.println("agora s√£o " + cerva + " cervejas na geladeira.");
					}
						if(cerva==0){
							System.out.println("quer comecar de novo?. sim=1/nao=0");
							}
						aceita = ler.nextInt();
							
						if(aceita==1){
								System.out.println("quer quantas?");
								quantas = ler.nextInt();
								while(cerva<quantas){
									System.out.print(cerva);
									System.out.println(" cervejas na geladeira.");
									cerva=cerva+1;
									}
						}
						if(aceita==0){
							System.out.println("acabou !!");
							break;
						}
					}
					ler.close();
				}
			}
