package cerveja;

import java.util.Scanner;

public class Principal {
	public static void main(String[] args) {
		
					int aceita,quantidade;
					int cerveja=99;
					Scanner ler = new Scanner(System.in);				
					while(true) {
						while(cerveja!=0){
						System.out.print(cerveja);
						System.out.println(" cervejas no freezer.");
						System.out.println("Pego uma garrafa, passo pra frente.");
						cerveja= cerveja -1;
						System.out.println("agora s√£o " + cerveja + " cervejas no freezer.");
					}
						if(cerveja==0){
							System.out.println("quer comeca de novo?. sim=1/nao=0");
							}
						aceita = ler.nextInt();
							
						if(aceita==1){
								System.out.println("quantas?");
								quantidade = ler.nextInt();
								while(cerveja<quantidade){
									System.out.print(cerveja);
									System.out.println(" cervejas no freezer.");
									cerveja=cerveja+1;
									}
						}
						if(aceita==0){
							System.out.println("so amanha agr ne?!!! kkkkk");
							break;
						}
					}
					ler.close();
				}
			}
